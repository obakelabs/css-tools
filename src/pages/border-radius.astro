---
import { AstroSeo } from "@astrolib/seo";

import BorderRadiusGenerator from "@/components/border-radius-generator";
import Tabs from "@/components/tabs/index.astro";
import Layout from "@/layouts/Layout.astro";
---

<AstroSeo
  title="Border Radius Generator - Obake Labs"
  description="Generate border radius for your website with ease."
/>

<Layout>
  <main class="min-h-dvh">
    <section
      class="mx-auto flex w-full max-w-5xl flex-col items-center justify-center gap-y-4 px-4 py-10 xl:px-0"
    >
      <h1 class="text-center text-3xl font-bold">
        Border Radius Generator - Obake Labs
      </h1>

      <Tabs />

      <BorderRadiusGenerator client:load />
    </section>
  </main>
</Layout>

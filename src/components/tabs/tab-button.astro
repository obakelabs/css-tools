---
import { cn } from "@/lib/utils";

import { ButtonLink } from "../ui/button";

const currentPath = Astro.url.pathname;

interface Props {
  href: string;
  title: string;
}

const { href, title } = Astro.props;
---

<ButtonLink
  href={href}
  size="lg"
  className={cn(
    "w-full rounded-full text-white",
    currentPath.startsWith(href)
      ? "border-indigo-600 bg-indigo-600 hover:bg-indigo-600/90"
      : "border-indigo-400 bg-transparent text-black hover:border-indigo-600 hover:bg-indigo-600 hover:text-white",
  )}
  variant={currentPath.startsWith(href) ? "default" : "outline"}
>
  {title}
</ButtonLink>
